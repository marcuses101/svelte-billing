{
	"name": "svelte-billing",
	"version": "0.0.1",
	"scripts": {
		"start": "PROTOCOL_HEADER=x-forwarded-proto HOST_HEADER=x-forwarded-host node build",
		"dev": "vite dev",
		"dev:pretty": "vite dev | pino-pretty",
		"build": "vite build",
		"migrate": "prisma db push",
		"migrate:force": "prisma db push --force-reset && prisma db seed",
		"seed": "prisma db seed",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:machine": "svelte-kit sync && svelte-check --output machine --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"deploy": "./deploy.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@fontsource/fira-mono": "^5.1.0",
		"@neoconfetti/svelte": "^2.2.1",
		"@prisma/client": "^5.22.0",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/postcss": "^4.1.7",
		"@tailwindcss/typography": "^0.5.16",
		"@types/bcrypt": "^5.0.2",
		"@types/cookie": "^0.6.0",
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"daisyui": "^5.0.35",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.11.0",
		"pino-pretty": "^11.3.0",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prisma": "^5.21.1",
		"svelte": "^5.30.2",
		"svelte-check": "^4.0.5",
		"tailwindcss": "^4.1.7",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.11.0",
		"vite": "^5.4.10",
		"vitest": "^2.1.3"
	},
	"type": "module",
	"dependencies": {
		"@auth/sveltekit": "^1.7.2",
		"@sveltejs/adapter-auto": "^3.3.0",
		"@sveltejs/adapter-node": "^5.2.8",
		"bcrypt": "^5.1.1",
		"better-sqlite3": "^11.5.0",
		"date-fns": "^4.1.0",
		"dotenv": "^16.4.5",
		"pino": "^9.5.0",
		"puppeteer": "^23.6.0"
	},
	"prisma": {
		"seed": "npx tsx prisma/seed.ts"
	}
}
